# Example Environment Variables
# Copy this file to .env.local and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3001"
NEXTAUTH_SECRET="your-secret-key"
JWT_SECRET="your-jwt-secret"

# Google OAuth Configuration
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Kafka Configuration
KAFKA_BROKER="localhost:9092"
KAFKA_CLIENT_ID="corporate-agent-service"
KAFKA_GROUP_ID="corporate-agent-group"

# External Services
DOCTOR_SERVICE_URL="http://localhost:3001/api/doctors"
APPOINTMENT_SERVICE_URL="http://localhost:3001/api/appointments"
HOSPITAL_SERVICE_URL="http://localhost:3001/api/hospitals"
PAYMENT_GATEWAY_URL="https://payment-gateway.example.com"

# SMS Gateway
SMS_API_KEY="your-sms-api-key"
SMS_API_URL="https://sms-gateway.example.com/api/send"
SMS_SENDER_ID="eChannelling"

# Email Service
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
EMAIL_USER="your-email@example.com"
EMAIL_PASSWORD="your-email-password"
EMAIL_FROM="Your App <noreply@yourapp.com>"

# File Upload
MAX_FILE_SIZE="5242880"
ALLOWED_FILE_TYPES="pdf,jpg,jpeg,png"

# Application Settings
NEXT_PUBLIC_APP_NAME="eChannelling Corporate Agent"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000/api"

# WebSocket Configuration (optional - set to 'true' to enable in development)
NEXT_PUBLIC_ENABLE_WEBSOCKET="false"
NEXT_PUBLIC_SOCKET_URL="ws://localhost:3001"

# Rate Limiting
RATE_LIMIT_WINDOW="15m"
RATE_LIMIT_MAX_REQUESTS="100"

# Session Configuration
SESSION_MAX_AGE="30d"
SESSION_UPDATE_AGE="24h"