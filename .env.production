# Production Environment Variables for Vercel

# API Configuration
NEXT_PUBLIC_API_BASE_URL="/api"
NEXT_PUBLIC_APP_URL="https://corporate-agent-frontend.vercel.app"

# Application Settings
NEXT_PUBLIC_APP_NAME="eChannelling Corporate Agent"

# Database Configuration - Use Vercel Environment Variables
# DATABASE_URL will be set in Vercel dashboard

# NextAuth Configuration  
NEXTAUTH_URL="https://corporate-agent-frontend.vercel.app"
# NEXTAUTH_SECRET and JWT_SECRET will be set in Vercel dashboard

# Google OAuth Configuration
# GOOGLE_CLIENT_ID and GOOGLE_CLIENT_SECRET will be set in Vercel dashboard

# External Services - Production URLs
DOCTOR_SERVICE_URL="https://corporate-agent-frontend.vercel.app/api/doctors"
APPOINTMENT_SERVICE_URL="https://corporate-agent-frontend.vercel.app/api/appointments"
HOSPITAL_SERVICE_URL="https://corporate-agent-frontend.vercel.app/api/hospitals"
PAYMENT_GATEWAY_URL="https://payment-gateway.example.com"

# Email Service
EMAIL_HOST="smtp.gmail.com"
EMAIL_PORT="587"
# EMAIL_USER and EMAIL_PASSWORD will be set in Vercel dashboard
EMAIL_FROM="eChannelling Corporate <noreply@echannelling.com>"

# File Upload
MAX_FILE_SIZE="5242880"
ALLOWED_FILE_TYPES="pdf,jpg,jpeg,png"

# Rate Limiting
RATE_LIMIT_WINDOW="15m"
RATE_LIMIT_MAX_REQUESTS="100"

# Session Configuration
SESSION_MAX_AGE="30d"
SESSION_UPDATE_AGE="24h"