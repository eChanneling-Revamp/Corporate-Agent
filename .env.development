# ===============================
# DEVELOPMENT ENVIRONMENT CONFIG
# ===============================

# Disable noisy development features
FAST_REFRESH=false
NEXT_PRIVATE_DEBUG_CACHE=false

# Reduce Prisma query logging (uncomment to enable when debugging)
# PRISMA_CLI_QUERY_ENGINE_TYPE=binary

# Development optimization
NODE_OPTIONS="--max-old-space-size=4096"

# Disable service worker in development to reduce console noise
NEXT_PUBLIC_DISABLE_SW=true

# Optional: Enable websocket in development (disabled by default)
# NEXT_PUBLIC_ENABLE_WEBSOCKET=true

# Reduce console verbosity
NEXT_PUBLIC_LOG_LEVEL=error